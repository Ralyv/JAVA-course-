
public class Task_08_03 {

	public static void main(String[] args) {
		
		short UserNumber = 31001;
		int Number;
		Number = UserNumber % 2;
		
		System.out.println();
		System.out.println("Въведеното цяло число е: " + UserNumber);
		System.out.println();
		System.out.println("ПРОВЕРКА ЗА ЧЕТНОСТ - РЕЗУЛТАТ:");
		System.out.println();
		
		boolean Even = (Number == 0);
		System.out.println(UserNumber + " e ЧЕТНО: " + Even);
		System.out.println();
		System.out.println("* Забележка: Ако резултата е \"false\" да се има предвид, че въведеното цяло число е НЕЧЕТНО");
		
		
	}

}
