import java.util.Scanner;

//Напишете програма, която чете от конзолата четири числа от тип int и отпечатва тяхната сума.

public class Task_05_02 {

	public static void main(String[] args) {
		Scanner task_05 = new Scanner(System.in);
		
		System.out.println();
		int a;
		System.out.println("Въведете стойност за 'а': ");
		a = task_05.nextInt();
		
		System.out.println();
		int b;
		System.out.println("Въведете стойност за 'b': ");
		b = task_05.nextInt();
		
		System.out.println();
		int c;
		System.out.println("Въведете стойност за 'c': ");
		c = task_05.nextInt();
		
		System.out.println();
		int d;
		System.out.println("Въведете стойност за 'd': ");
		d = task_05.nextInt();
		
		System.out.println();
		System.out.println("Въведени стойности: ");
		System.out.println("a = " + a + "\t" + "b = " + b + "\t" + "c = " + c + "\t" + "d = " + d);
		System.out.println();
		
		int sum = a + b + c + d;
		System.out.println("Сума: а + b + c + d = " + sum);
		
		task_05.close();
		}

