import java.util.Scanner;

//Компания се нуждае от система за съхранение на информация за служители.  
//Направете програма, която изисква следната информация:
//Име, Фамилия, Години (0, 120), пол (еднобуквен 'м' или 'ж'), ЕГН, телефон. 
//Подберете подходящите типове данни и декларирайте нужните променливи. 
//Прочетете от конзолата нужната иформация за служител и след това изведете на конзолата

public class Task_03 {

	public static void main(String[] args) {
		Scanner task_03 = new Scanner(System.in);
		System.out.println("Въведете име: ");
		String Name = task_03.nextLine();
		
		System.out.println();
		System.out.println("Въведете фамилия: ");
		String Surname = task_03.nextLine();
		
		System.out.println();
		System.out.println("Въведете пол: ");
		char Sex = task_03.next();
		
		System.out.println();
		System.out.println("Въведете възраст: ");
		byte Age = task_03.nextByte();
		
		//System.out.println();
		//System.out.println("Въведете пол: ");
		//String Sex = task_03.nextLine();
		
		System.out.println();
		System.out.println("Въведете ЕГН: ");
		long PersonalNumber = task_03.nextLong();
		
		System.out.println();
		System.out.println("Въведете телефонен номер: ");
		long PhoneNumber = task_03.nextLong();
		
		System.out.println();
		System.out.println("ИМЕ:  " + Name);
		System.out.println("ФАМИЛИЯ:  " + Surname);
		System.out.println("ВЪЗРАСТ:  " + Age);
		System.out.println("ПОЛ: " + Sex );
		System.out.println("ЕГН:  " + PersonalNumber);
		System.out.println("ТЕЛЕФОНЕН НОМЕР:  " + PhoneNumber);
		
		task_03.close();
		} 

}
