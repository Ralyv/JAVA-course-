import java.util.Scanner;

// Напишете булев израз, който да проверява дали дадено цяло число се дели 
// на 5 и на 7 без остатък. Изведете резултатът.

public class Task_07 {

	public static void main(String[] args) {
		Scanner task_07 = new Scanner(System.in);
		System.out.println("Въведете стойност: ");
		int UserNumber = task_07.nextInt();
		
		int number_5 = UserNumber % 5;
		int number_7 = UserNumber % 7;
		
		boolean User = (number_5 == 0 && number_7 == 0);
		
		task_07.close();		 

	}

}
