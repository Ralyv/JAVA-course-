import java.util.Scanner;

// Напишете програма, която чете от конзолата радиуса “r” на кръг и 
// отпечатва неговия периметър и лице.

public class Task_06 {

	public static void main(String[] args) {
		
		float r;
		float pi = 3.14159f;
		float AreaCircle;
		float LengthCircle;
		
		Scanner task_06 = new Scanner(System.in);
		System.out.println();
		System.out.println("Въведете стойност за 'r':   ");
		r = task_06.nextFloat();
		
		AreaCircle = pi * (r * r);
		LengthCircle = 2 * pi * r;
		
		System.out.println();
		System.out.println("Въведена стойност за 'r':   " + r);
		System.out.println("Площ на кръга S = " + AreaCircle);
		System.out.println("Обиколка на кръга L = " + LengthCircle);
		
		
		
		

	task_06.close();
	}

}
