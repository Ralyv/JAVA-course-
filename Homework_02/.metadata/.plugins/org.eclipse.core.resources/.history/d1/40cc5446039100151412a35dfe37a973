import java.util.Scanner;

// Напишете израз, който да проверява дали дадено цяло число е четно или нечетно. 
// Изведете резултатът.

public class Task_08 {

	public static void main(String[] args) {
		Scanner task_08 = new Scanner(System.in);
		System.out.println();
		System.out.println("Въведете цяло число: ");
		int UserNumber = task_08.nextInt();
		System.out.println();
		
		int Even = UserNumber % 2;
		int Odd  = UserNumber % 2;
		
		boolean EvenBoolean = (Even == 0 || Odd != 0);
		System.out.println("Въведено цяло число " + UserNumber);
		System.out.println("Цялото число е ЧЕТНО: ");
		
		boolean OddBoolean = (Odd != 0 || Even == 0);
		System.out.println("Въведено цяло число " + UserNumber);
		System.out.println("Цялото число е НЕЧЕТНО: ");
		
		task_08.close();		 


	}

}
